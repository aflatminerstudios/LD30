          <argument>
            <kind>1</kind>
            <string>///Set Options using gamepad

var gamePadNum = scrOuyaPlayerGamepad(1);

hVal = gamepad_axis_value(gamePadNum, gp_axislh);
vVal = gamepad_axis_value(gamePadNum, gp_axislv);

if (useGamePad) {

    if (vVal &gt; 0.5 &amp;&amp; vVal &gt; hVal) {
        if (selectedOption != optCredits) {
            choiceBox.y += menuItemVertSpacing;
            selectedOption += 1;
        }
        useGamePad = false;    
    } else if (vVal &lt; -0.5 &amp;&amp; vVal &lt; hVal) {
        if (selectedOption != opt1P) {
            choiceBox.y -= menuItemVertSpacing;
            selectedOption -= 1;
        }
        useGamePad = false;    
    }

} else {
    if (abs(hVal) &lt; 0.25 &amp;&amp; abs(vVal) &lt; 0.25){ 
        useGamePad = true;
    }
}

///Check for gamepad button

if (scrCheckController(gamePadNum) == true)
{
   alarm[0] = 1;
}
</string>
